<h1 class="title"> {{section.settings.test-title}}</h1>
<!-- <p class="text">{{section.settings}}</p> -->

{% for block in section.blocks %}
    {% case block.type %}
        {% when 'text' %}
            <div class="text" {{ block.shopify_attributes }}>
                {{block.settings.test-text}}
            </div>
    {% endcase %}
{% endfor %}


{% schema %}
    {
        "name": "test-file",
        "settings": [
            {
                "type": "text",
                "id": "test-title",
                "label": "test-title"
            }
        ],
        "blocks": [
            {
                "name": "test-text",
                "type": "text",
                "settings": [
                    {
                        "type": "text",
                        "id": "test-text",
                        "default": "text from section",
                        "label": "test-text"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "test-preset"
            }
        ]
    }
{% endschema %}

{% stylesheet %}
    .title, .text{
        width: fit-content;
        padding-left: 50px;
        padding-bottom: 50px;
    }
{% endstylesheet %}